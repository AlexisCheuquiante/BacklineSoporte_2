        <script>

        var urlObtenerEmpresas = '@Url.Action("ObtenerEmpresas", "ConsultasDrogueria")';
        var urlObtenerTipoDocumetoConsulta = '@Url.Action("ObtenerTipoDocumetoConsulta", "ConsultasDrogueria")';
        var urlObtenerSolicitante = '@Url.Action("ObtenerSolicitante", "ConsultasDrogueria")';
        var urlObtenerDocumentosConsulta = '@Url.Action("ObtenerDocumentosConsulta", "ConsultasDrogueria")';


        $(document).ready(function () {

            $('.ui.selection.dropdown').dropdown();
            $('.ui.menu .ui.dropdown').dropdown({

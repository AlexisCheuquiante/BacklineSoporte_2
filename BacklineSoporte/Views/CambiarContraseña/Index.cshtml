    <script>

        var urlCambiarClave = '@Url.Action("CambiarClave", "CambiarContraseña")';

        $(document).ready(function () {

            $('.ui.selection.dropdown').dropdown();
            $('.ui.menu .ui.dropdown').dropdown({
                on: 'hover'
            });
        });

    </script>
</head>
<body>
    <div style="height:50px"></div>
    <div id="modalLogin" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="opacity:0.9">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="exampleModalLabel">Cambiar password</h3>
                </div>
                @*<img class="ui fluid image" src="~/Recursos/Imagenes/LogoEsyser_v2.png" />*@
                <div class="modal-body">
                    <div class="image content">
                        <div class="ui info message">
                            <div class="header">
                                Atención al completar los campos!
                            </div>
                            Debes completar todos los campos para guardar!
                            <div class="ui divider"></div>
                            <div class="ui form">
                                <form>
                                    <div class="two fields">
                                        <div id="divtxtContraseña" class="field" style="width:70%">
                                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Nueva password</font></font></label>
                                            <input id="txtContraseñaNueva" type="password" placeholder="" autocomplete="off">
                                        </div>
                                    </div>
                                    <div class="two fields">
                                        <div id="divtxtContraseñaConfirmacion" class="field" style="width:70%">
                                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Confirme password</font></font></label>
                                            <input id="txtContraseñaConfirmacion" type="password" placeholder="" autocomplete="off">
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div id="divExito" class="ui icon hidden positive  message">
                        <i class="key icon"></i>
                        <div class="content">
                            <div class="header">
                                Seguridad
                            </div>
                            <p>Se ha cambiado su contraseña con éxito, la sessión se cerrará en 5 segundos.</p>
                        </div>
                    </div>
                    <div class="actions">
                        <div id="DivMessajeErrorGeneral" class="ui error hidden message" style="margin-left:auto; margin-right:auto; width:100%">
                            <div class="header">
                                Se han encontrado algunos problemas, revíselos...
                            </div>
                            <ul id="listMessajeError" class="list"></ul>
                        </div>
                    </div>

                    <div style="height:5px"></div>
                    @*<br />*@
                    <div id="btnCambiarContrasena" class="ui black right labeled icon button" onclick="UpdateContraseña();">
                        Cambiar password
                        <i class="checkmark icon"></i>
                    </div>
                    <div id="btnSalir" class="ui right labeled icon button" onclick="javascript:location.href='/Home'" data-dismiss="modal">Volver<i class="arrow left icon"></i></div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
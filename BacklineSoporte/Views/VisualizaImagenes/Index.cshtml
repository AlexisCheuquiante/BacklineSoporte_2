    <script>

        var urlInsertarObservacion = '@Url.Action("InsertarObservacion", "VisualizaImagenes")';
        var urlSaveImagenSolicitud = '@Url.Action("SaveImagen", "VisualizaImagenes")';
        var urlObtenerDestinos = '@Url.Action("ObtenerDestinos", "VisualizaImagenes")';
        var urlCambiaDestino = '@Url.Action("CambiaDestino", "VisualizaImagenes")';
        var urlSaveImagen = '@Url.Action("SaveImagenProblema", "VisualizaImagenes")';
        @*var urlRechazaDestino = '@Url.Action("RechazaDestino", "VisualizaImagenes")';*@

        $(document).ready(function () {

            $('.ui.selection.dropdown').dropdown();
            $('.ui.menu .ui.dropdown').dropdown({

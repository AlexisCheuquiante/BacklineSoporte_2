    <script>

        var urlGuardarComentario = '@Url.Action("GuardarComentario","Comentario")';
        var urlObtenerImagenesComentario = '@Url.Action("ObtenerImagenesComentario", "MantenedorEstablecimientos")';

    </script>
</head>
<body>
    <div @*class="modal fade"*@ id="modalComentario" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="txtNumeroComentario">Comentarios de la solicitud N° : @Model.Id_Requerimiento </h4>
                </div>
                <div class="modal-body">

                    <div id="divDatosCliente" class="image content">
                        <div class="ui info message">
                            <div class="header">
                                Atención al llenar el formulario!
                            </div>
                            La data de este formulario debe ser llenada con la mayor exactitud posible
                            <br />
                            <div class="ui divider"></div>
                            <div class="ui form">
                                <form>

                                    <table class="ui celled table table-striped">
                                        <thead>
                                            <tr>
                                                <th style="width: 50px; word-wrap: break-word; background-color: deepskyblue">Numero comentario</th>
                                                <th style="width: 130px; word-wrap: break-word; background-color: deepskyblue">Autor</th>
                                                <th style="width: 130px; word-wrap: break-word; background-color: deepskyblue">Comentario</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @{
                                                foreach (var observacion in Model.ListaComentarios)
                                                {

                                                    <tr>
                                                        <td>@observacion.Id</td>
                                                        <td>@observacion.NombreCreador</td>
                                                        <td>@observacion.ComentarioObs</td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                    <div id="divTxtComentario" class="field">
                                        <label>Comentario:</label>
                                        <textarea placeholder="Comentario aquí..." rows="5" id="txtComentario" style="text-transform:uppercase;" onkeyup="ValidaGuardar();"></textarea>
                                    </div>
                                </form>
                            </div>
                        </div>
                        @*<div class="ui section divider"></div>*@
                    </div>
                    <div class="actions">
                        <br />
                        <div id="DivMessajeErrorGeneral" class="ui hidden error message" style="margin-left:auto; margin-right:auto; width:100%">
                            <div class="header">
                                Se han encontrado algunos problemas, revíselos...
                            </div>
                            <ul id="listMessajeError" class="list"></ul>
                        </div>
                    </div>
                    <div id="divExito" class="ui icon success hidden  message">
                        <i class="thumbs up outline icon"></i>
                        <div class="content">
                            <div class="header">
                                Transacción exitosa
                            </div>
                            <p>El comentario ha sido guardado con éxito.</p>
                        </div>
                    </div>
                </div>



                <div id="divBotones" class="modal-footer">


                    <div id="btnGuardaComentario" class="ui blue right labeled icon button" onclick="GuardarComentario();">
                        Guardar
                        <i class="save icon"></i>
                    </div>
                    <div id="btnLimpiar" class="ui right labeled icon button" onclick="Limpiar();">Limpiar<i class="trash icon"></i></div>
                    <div id="btnSalir" class="ui right labeled icon button" onclick="javascript:location.href='/Mesa?limpiar=1'" data-dismiss="modal">Volver<i class="cancel icon"></i></div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

<input type="hidden" id="idComentario" value="0" />
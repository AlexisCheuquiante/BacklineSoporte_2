    <script>

        var urlGuardarUsuario = '@Url.Action("GuardarUsuario", "MantenedorUsuarios")';
        var urlEditarUsuario = '@Url.Action("EditarUsuario", "MantenedorUsuarios")';
        var urlEliminarUsuario = '@Url.Action("EliminarUsuario", "MantenedorUsuarios")';
    </script>

</head>


<body>
    <br />
    <div style="margin-left:auto; margin-right:auto; width:40%; opacity:0.9">
        <div id="btnAgregaUsuario" data-toggle="modal" data-target="#modalUsuariosFarmacia" class="ui purple right labeled icon button">
            Agregar Usuario
            <i class="checkmark icon"></i>
        </div>
        <div id="btnSalir" class="ui right labeled icon button" onclick="javascript:location.href='/CrearFarmacia'" data-dismiss="modal">Volver<i class="arrow left icon"></i></div>

        <table class="ui celled table  table-striped">
            <thead>
                <tr>
                    <th style="width:130px;"></th>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>UserName</th>
                    <th>Contraseña</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var usuario in Model.listaUsuarioFarmacias)
                    {
                        <tr>
                            <td>
                                <button class="ui icon red button" value="@usuario.Id" data-toggle="modal" data-target="#modalEliminarUsuario" onclick="PreparaEliminaUsuario(this.value, this);">
                                    <i class="trash icon"></i>
                                </button>
                                <button class="ui icon green button" value="@usuario.Id" data-toggle="modal" data-target="#modalUsuariosFarmacia" onclick="PrepararEditarUsuario(this.value, this); EditarUsuario();">
                                    <i class="edit icon"></i>
                                </button>
                            </td>
                            <td>@usuario.Id</td>
                            <td>@usuario.Nombre</td>
                            <td>@usuario.UserName</td>
                            <td>@usuario.password</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <br />
    <div class="modal fade" id="modalUsuariosFarmacia" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="margin-left: auto; margin-right: auto; width: 95%; opacity:0.9">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div style="height:5px"></div>
                <div>

                    <h3 style="color:black" class="ui header">
                        <img class="bordered rounded" src="~/Recursos/Imagenes/LogoBackline.png" width="50" alt="">
                        Usuarios
                    </h3>
                </div>
                <div class="modal-body">
                    <div class="image content">
                        <div class="ui info message">
                            <div class="header">
                                Atención al llenar los datos!
                            </div>
                            Debes completar todos los campos para guardar!
                            <div class="ui divider"></div>
                            <div class="ui form">
                                <form>
                                    <div class="two fields">

                                        <div id="divTxtNombre" class="field">
                                            <label>Nombre:</label>
                                            <input type="text" id="txtNombre" placeholder="Ingrese nombre">

                                        </div>

                                        <div id="divTxtUserName" class="field">
                                            <label>User Name:</label>
                                            <input type="text" id="txtUserName" placeholder="Ingrese UserName">

                                        </div>
                                    </div>
                                    <div class="two fields">

                                        <div id="divTxtPassword" class="field">

                                            <label>Password:</label>
                                            <input type="text" id="txtPassword" placeholder="Ingrese Password">


                                        </div>


                                    </div>


                                </form>
                            </div>
                        </div>
                    </div>
                    <div style="height:5px">

                    </div>
                    <div id="divExito" class="ui icon hidden positive  message">
                        <i class="stopwatch icon"></i>
                        <div class="content">
                            <div class="header">
                                Éxito!!
                            </div>
                            <p>El usuario fue guardado con éxito.</p>
                        </div>
                    </div>
                    <div class="actions">
                        <div id="DivMessajeErrorGeneral" class="ui error hidden message" style="margin-left:auto; margin-right:auto; width:100%">
                            <i class="close icon"></i>
                            <div class="header">
                                Se han encontrado algunos problemas, revíselos...
                            </div>
                            <ul id="listMessajeError" class="list"></ul>
                        </div>
                    </div>
                    <div class="actions">
                        <div id="DivMessajeErrorGeneral" class="ui error hidden message" style="margin-left:auto; margin-right:auto; width:100%">
                            <i class="close icon"></i>
                            <div class="header">
                                Se han encontrado algunos problemas, revíselos...
                            </div>
                            <ul id="listMessajeErrorAgregar" class="list"></ul>
                        </div>
                    </div>
                    <button id="btnGuardaUsuario" class="ui fluid labeled blue icon button" onclick="GuardarUsuario();">
                        <i class="checkmark icon"></i>
                        Guardar Usuario
                    </button>
                    <div style="height:5px">

                    </div>
                </div>
            </div>
        </div>
    </div>



</body>

</html>
<div class="modal fade" id="modalEliminarUsuario" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLongTitle">Eliminar Usuario</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="ui icon warning message">
                    <i class="trash icon"></i>
                    <div class="content">
                        <div class="header">
                            ¿Desea eliminar este usuario?
                        </div>
                        <p>Esta usuario será eliminada de forma lógica desde la base de datos</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div id="btnEliminarUsuario" onclick="EliminarUsuario();" class="ui red right labeled icon button">
                    Eliminar Usuario
                    <i class="checkmark icon"></i>
                </div>
                <div id="btnCancelar" data-dismiss="modal" class="ui right labeled icon button">
                    Cancelar
                    <i class="cancel icon"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="hidUsuario" value="0" />
